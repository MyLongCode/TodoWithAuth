@model IEnumerable<Note>
<link href="@Url.Content("~/css/note.css")" rel="stylesheet" type="text/css" />
<h1>Мои заметки:</h1>
@foreach (var item in Model)
{
	<div class="note">
		<h3 class="post-title">@item.Title</h3>
		<p class="post-content">@item.Description</p>
		<form asp-controller="Notes" asp-action="Delete" method="post"  asp-route-id="@item.Id">
			<input type="submit" value="Удалить" />
		</form>
	</div>
	
}
